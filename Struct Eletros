#include <stdio.h>

//DEFININDO UMA STRUCT
typedef struct{
  char nome[40];
  float potencia;
  float temp_uso;
  float consumo;
  float cons_relativo;
}Eletro;


int main(void) {
  
  Eletro aparelho[2]; //CRIANDO UM VETOR DE STRUCT
  int tempo_dias;
  float cons_total = 0.0;

  //ARMAZENANDO OS VALORES DA STRUCT  
  for(int i=0; i<2; i++){
    printf("NOME ELETRO: ");
    scanf("%s", aparelho[i].nome); //FORMA DE ACESSAR AS VARIAVEIS DA STRUCT

    printf("POTENCIA: ");
    scanf("%f", &aparelho[i].potencia);

    printf("TEMPO DE USO DIARIO: ");
    scanf("%f", &aparelho[i].temp_uso);
    printf("\n");
    } 
  
  //IMPRINDO OS VALORES DA STRUCT
for(int i=0; i<2; i++){
  printf("ELETRO: %s\n", aparelho[i].nome);
  printf("POTENCIA: %.2fWatts/hora\n", aparelho [i].potencia);
  printf("USO DIARIO: %.2f horas\n", aparelho [i].temp_uso);
  printf("\n");
}


//CALCULANDO O CONSUMO DOS ELTROS
  printf("Quantos dias de uso: ");
  scanf("%d", &tempo_dias);

  for(int i=0; i<2; i++){
    aparelho[i].consumo = (aparelho[i].potencia / 1000) * (aparelho[i].temp_uso * tempo_dias);
    cons_total += aparelho[i].consumo;
    aparelho[i].cons_relativo = (aparelho[i].consumo/cons_total) * 100;

    printf("ELETRO: %s\n", aparelho[i].nome);
    printf("CONSUMO: %.2f W/h\n", aparelho [i].consumo);
    printf("CONSUMO RELATIVO: %.2f W/h\n", aparelho [i].cons_relativo);
    printf("\n");
}
 
printf("CONSUMO TOTAL DE TODOS OS ELETROS: %.2f W/h\n", cons_total);

  return 0;
}
